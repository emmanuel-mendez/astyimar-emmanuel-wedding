---
import DressIcon from "@public/icons/dress.svg";
import SuitIcon from "@public/icons/suit.svg";
import flower3Image from "@public/images/flower--3.png";
import flower16Image from "@public/images/flower--16.png";
import flower14Image from "@public/images/flower--14.png";
import { Image } from "astro:assets";
---

<section id="dress-code" class="host">
  <div class="head">
    <h2 class="title">CÃ³digo de Vestimenta</h2>
    <div class="description__container">
      <Image
        class={"description__flower description__flower--1"}
        src={flower3Image}
        alt={"Flower"}
      />
      <p class="description">Formal</p>
      <Image
        class={"description__flower description__flower--2"}
        src={flower3Image}
        alt={"Flower"}
      />
    </div>
  </div>

  <div class="body">
    <div class="item">
      <Image
        class={"item__flower item__flower--dress"}
        src={flower16Image}
        alt={"Flower"}
      />
      <DressIcon
        class="item__icon"
        width={60}
        height={60}
        color={"var(--white)"}
      />
      <p class="item__description">
        <span class="line">
          Color <span class="color color--white">blanco</span>
        </span>
        <span class="line">reservado para la novia</span>
      </p>
    </div>

    <div class="item">
      <Image
        class={"item__flower item__flower--suit"}
        src={flower14Image}
        alt={"Flower"}
      />
      <SuitIcon
        class="item__icon"
        width={60}
        height={60}
        color={"var(--white)"}
      />
      <p class="item__description">
        <span class="line"
          >Color <span class="color color--light-blue">azul celeste</span></span
        >
        <span class="line">reservado para el novio </span>
      </p>
    </div>
  </div>
</section>

<style>
  .host {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 1.5rem;
    gap: 2rem;
    background-color: var(--primary-dark);

    @media (min-width: 768px) {
      padding: 4rem 2rem;
    }

    @media (min-width: 1024px) {
      gap: 3rem;
    }
  }

  .head {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--white);
  }

  .title {
    font-size: 1.6rem;
    text-align: center;

    @media (min-width: 768px) {
      font-size: 2rem;
    }

    @media (min-width: 1024px) {
      font-size: 3rem;
    }
  }

  .description__container {
    display: flex;
    align-items: center;
    gap: 0.3rem;

    @media (min-width: 768px) {
      gap: 0.75rem;
    }
  }

  .description {
    font-size: 2rem;
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;

    @media (min-width: 768px) {
      font-size: 2.4rem;
    }

    @media (min-width: 1024px) {
      font-size: 3.6rem;
    }
  }

  .description__flower {
    height: 1.2rem;
    width: auto;

    @media (min-width: 768px) {
      height: 1.5rem;
    }
  }

  .description__flower--2 {
    transform: rotate(180deg);
  }

  .body {
    display: grid;
    width: min(100%, 48rem);
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;

    @media (min-width: 768px) {
      gap: 2.5rem;
    }
  }

  .item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 0.6rem;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.2);
    border-radius: 0.5rem;

    @media (min-width: 768px) {
      padding: 1rem;
      gap: 1.5rem;
    }
  }

  .item__flower {
    position: absolute;
    height: auto;
  }

  .item__flower--dress {
    width: 2rem;
    bottom: calc(100% - 1rem);
    right: calc(100% - 1rem);

    @media (min-width: 768px) {
      width: 3rem;
      bottom: calc(100% - 1.5rem);
      right: calc(100% - 1.5rem);
    }
  }

  .item__flower--suit {
    width: 1.3rem;
    top: calc(100% - 2rem);
    left: calc(100% - 0.5rem);

    @media (min-width: 768px) {
      width: 2rem;
      top: calc(100% - 3.5rem);
      left: calc(100% - 1.5rem);
    }
  }

  .item__icon {
    @media (min-width: 768px) {
      width: 6rem;
      min-height: 6rem;
    }

    @media (min-width: 1024px) {
      width: 7rem;
      min-height: 7rem;
    }
  }

  .item__description {
    text-align: center;
    color: var(--white);
    font-size: 0.875rem;
    line-height: 120%;

    @media (min-width: 768px) {
      font-size: 1.2rem;
    }

    @media (min-width: 1024px) {
      font-size: 1.4rem;
    }
  }

  .color {
    font-weight: bold;
    text-transform: capitalize;
    padding: 0.0625rem 0.65rem;
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 0.6rem;
    font-size: 1.1em;
  }

  .color--white {
    color: var(--white);
  }

  .color--light-blue {
    color: var(--light-blue);
  }

  .line {
    display: block;
  }
</style>
