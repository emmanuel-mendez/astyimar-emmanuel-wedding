---
import flower5Image from "@public/images/flower--5.png";
import { Image } from "astro:assets";
---

<section class="host">
  <div class="head">
    <h2 class="title font--heading">
      <Image
        class={"title__flower title__flower--left"}
        src={flower5Image}
        alt={"Flower"}
      />
      <span class="title__text">¿Aún no has confirmado tu asistencia?</span>
      <Image
        class={"title__flower title__flower--right"}
        src={flower5Image}
        alt={"Flower"}
      />
    </h2>
    <p class="description">
      Confirmar tu asistencia es tan importante como asistir.
    </p>
  </div>

  <button class="button font--body"> Confirmar asistencia </button>
</section>

<style>
  .host {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 1.5rem;
    gap: 2rem;
    background-color: var(--primary-dark);
    margin-bottom: 4rem;

    @media (min-width: 768px) {
      padding: 4rem 2rem;
      gap: 3.5rem;
    }
  }

  .head {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
    color: var(--white);

    @media (min-width: 768px) {
      gap: 2rem;
    }
  }

  .title {
    position: relative;
    padding-inline: 3ch;

    @media (min-width: 768px) {
      padding-inline: 4ch;
    }
  }

  .title__text {
    font-size: 2.2rem;

    @media (min-width: 768px) {
      font-size: 2.8rem;
    }

    @media (min-width: 1024px) {
      font-size: 3.8rem;
    }
  }

  .title__flower {
    position: absolute;
    top: 0;
    bottom: 0;
    margin-block: auto;
    width: 1.5rem;
    height: auto;

    @media (min-width: 768px) {
      width: 1.75rem;
    }
  }

  .title__flower--left {
    left: 0;
  }

  .title__flower--right {
    right: 0;
    transform: rotate(90deg);
  }

  .description {
    font-size: 1.2rem;
    width: 17ch;

    @media (min-width: 768px) {
      width: unset;
      font-size: 1.4rem;
    }

    @media (min-width: 1024px) {
      font-size: 1.8rem;
    }
  }

  .button {
    padding: 0.8rem 1.2rem;
    border: 0.0625rem solid var(--white);
    color: var(--white);
    font-size: 1.4rem;
    background-color: transparent;
    border-radius: 0.3rem;
    transition: all 0.2s ease;
    cursor: pointer;

    @media (min-width: 768px) {
      font-size: 1.6rem;
    }

    @media (min-width: 1024px) {
      padding: 1rem 1.6rem;
      font-size: 2.2rem;
    }
  }

  .button:hover,
  .button:active {
    background-color: var(--white);
    color: var(--primary-dark);
  }
</style>
