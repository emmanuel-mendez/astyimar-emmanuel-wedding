---
import flower3Image from "@public/images/flower--3.png";
import { Image } from "astro:assets";
import ConfirmDialog from "@components/organisms/ConfirmDialog/ConfirmDialog";
import type { Guest } from "@models/types/guest";

interface Props {
  guest: Guest;
}

const { guest } = Astro.props;
---

<section class="host">
  <div class="head">
    <h2 class="title font--heading">
      <Image
        class={"title__flower title__flower--left"}
        src={flower3Image}
        alt={"Flower"}
      />
      <span class="title__text">¿Aún no has confirmado tu asistencia?</span>
      <Image
        class={"title__flower title__flower--right"}
        src={flower3Image}
        alt={"Flower"}
      />
    </h2>
    <div class="info">
      <div class="description">
        <p>
          <span class="description--bold">¡Atención!</span> Se viene una fiesta legendaria...
        </p>
        <p>Solo apta para personas increíbles como tú.</p>
      </div>
      <p class="description">¿Confirmas?</p>
    </div>
  </div>

  <ConfirmDialog client:visible guest={guest} />
</section>

<style>
  .host {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 1.5rem;
    gap: 2rem;
    background-color: var(--primary-dark);
    margin-bottom: 4rem;

    @media (min-width: 768px) {
      padding: 4rem 2rem;
      gap: 3.5rem;
    }
  }

  .head {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.75rem;
    text-align: center;
    color: var(--white);

    @media (min-width: 768px) {
      gap: 2rem;
    }
  }

  .title {
    position: relative;
    padding-inline: 3ch;

    @media (min-width: 768px) {
      padding-inline: 4ch;
    }
  }

  .title__text {
    font-size: 1.8rem;

    @media (min-width: 768px) {
      font-size: 2.8rem;
    }

    @media (min-width: 1024px) {
      font-size: 3.8rem;
    }
  }

  .title__flower {
    position: absolute;
    top: 0;
    bottom: 0;
    margin-block: auto;
    width: 1.5rem;
    height: auto;

    @media (min-width: 768px) {
      width: 1.75rem;
    }
  }

  .title__flower--left {
    left: 0;
  }

  .title__flower--right {
    right: 0;
    transform: rotate(90deg);
  }

  .info {
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;

    @media (min-width: 768px) {
      gap: 1rem;
    }
  }

  .description {
    width: 100%;
    font-size: 1.2rem;

    @media (min-width: 768px) {
      width: unset;
      font-size: 1.4rem;
    }

    @media (min-width: 1024px) {
      font-size: 1.8rem;
    }
  }

  .description--bold {
    font-weight: bold;
  }
</style>
