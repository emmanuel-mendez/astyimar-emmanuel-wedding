---
import { Image } from "astro:assets";
---

<button id="nav-toggle" class="toggle" aria-expanded="false">
  <div class="menu">
    <span class="icon--menu">
      <Image src="/icons/menu.svg" alt="Menu" width={52} height={52} />
    </span>
    <span class="icon--close">
      <Image src="/icons/close.svg" alt="Cerrar" width={52} height={52} />
    </span>
  </div>
</button>
<nav id="nav" hidden>
  <ul>
    <li><a href="#guest">Invitado</a></li>
    <li><a href="#date">Fecha</a></li>
    <li><a href="#location">Lugar</a></li>
    <li><a href="#dress-code">CÃ³digo de vestimenta</a></li>
    <li><a href="#timeline">Itinerario</a></li>
    <li><a href="#gifts">Regalos</a></li>
    <li><a href="#table">Encuentra tu mesa</a></li>
  </ul>
</nav>

<style>
  .toggle {
    border: none;
    background-color: transparent;
    outline: none;

    @media (min-width: 1024px) {
      display: none;
    }
  }

  .menu {
    position: relative;
    width: 3.25rem;
    height: 3.25rem;
  }

  .toggle .icon--menu {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    visibility: visible;
    opacity: 1;
    transition: opacity 0.2s ease-in-out;
  }
  .toggle .icon--close {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.2s ease-in-out;
  }
  .toggle[aria-expanded="true"] .icon--menu {
    visibility: hidden;
    opacity: 0;
  }
  .toggle[aria-expanded="true"] .icon--close {
    visibility: visible;
    opacity: 1;
  }

  nav {
    position: absolute;
    top: 100%;
    left: 0;
    display: flex;
    width: 100%;
    overflow: hidden;

    @media (min-width: 1024px) {
      position: static;
      width: auto;
    }
  }

  ul {
    position: relative;
    right: 0;
    display: flex;
    width: 100%;
    min-height: calc(100svh - 5.375rem);
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.5rem;
    background-color: white;
    transition: right 0.4s ease-in-out;

    @media (min-width: 1024px) {
      width: auto;
      min-height: auto;
      flex-direction: row;
      padding: 1rem 0;
      gap: 1.8rem;
      transition: none;
    }
  }

  nav[hidden] ul {
    right: -100%;

    @media (min-width: 1024px) {
      right: 0;
    }
  }

  a {
    position: relative;
    color: currentColor;
    text-decoration: none;
    font-size: 1.25rem;
  }
  a::after {
    content: "";
    position: absolute;
    bottom: -0.25rem;
    left: 0;
    width: 100%;
    height: 0.0625rem;
    background-color: currentColor;
    transform: scaleX(0);
    transition: transform 0.2s ease-in-out;
  }
  a:hover::after,
  a:focus::after {
    transform: scaleX(1);
  }
</style>

<script>
  const toggleBtn = document.getElementById(
    "nav-toggle"
  ) as HTMLButtonElement | null;
  const nav: HTMLElement | null = document.getElementById("nav");
  if (toggleBtn && nav) {
    toggleBtn.addEventListener("click", () => {
      const expanded: boolean =
        toggleBtn.getAttribute("aria-expanded") === "true";
      toggleBtn.setAttribute("aria-expanded", (!expanded).toString());
      nav.hidden = expanded;
    });

    const navLinks = nav.querySelectorAll("a");
    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        if (toggleBtn.getAttribute("aria-expanded") === "true") {
          toggleBtn.setAttribute("aria-expanded", "false");
          nav.hidden = true;
        }
      });
    });
  }
</script>
