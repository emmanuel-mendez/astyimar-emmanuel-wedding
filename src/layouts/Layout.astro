---
import "../../styles/reset.css";
import "../../styles/typography.css";
import Float from "../components/atoms/Float.astro";
import Footer from "../components/organisms/Footer/Footer.astro";
import Header from "../components/organisms/Header/Header.astro";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astyimar y Emmanuel</title>
  </head>
  <body class="font--body">
    <Header />
    <div>
      <slot />
      <Float />
    </div>
    <Footer />
  </body>

  <style>
    html {
      scroll-behavior: smooth;
      scroll-padding-top: 5.4375rem;

      @media (min-width: 80rem) {
        scroll-padding-top: 6.5rem;
      }
    }

    body {
      display: grid;
      min-height: 100svh;
      grid-template-rows: auto 1fr auto;
      color: #333333;
    }
  </style>
</html>
